---
import './card-portfolio.css';
const {
	title,
	descripcion,
	imgSrc,
	skills,
	repoURL,
	demoURL,
	averageBrightness,
	Youtube,
} = Astro.props;
---

<div class="card__portfolio">
	<img
		src={imgSrc}
		alt={title}
		crossorigin="anonymous"
		height={130}
		width={332}
		loading="lazy"
		average-brightness={averageBrightness}
	/>

	<div class="descripcion__container">
		<h3 class="card__title">{title}</h3>
		<div class="descripcion">
			<p>{descripcion}</p>

			<div class="skills">
				{
					skills.map((skill) => (
						<iconify-icon class="iconify" icon={skill} noobserver />
					))
				}
			</div>

			<div class="buttons">
				<a href={repoURL}>
					<span>
						Github
						{(<iconify-icon icon="quill:link-out" noobserver />)}
					</span>
				</a>

				<a href={demoURL}>
					<span>
						Demo
						{(<iconify-icon icon="quill:link-out" noobserver />)}
					</span>
				</a>
				{
					Youtube && (
						<a href={Youtube}>
							<span>
								Youtube
								{
									<iconify-icon
										icon="quill:link-out"
										noobserver
									/>
								}
							</span>
						</a>
					)
				}
			</div>
		</div>
	</div>
</div>
