---
import './hero.css';
import Boton from '../atoms/Boton.astro';
const { name, description, linkTree, cv } = Astro.props.myData;
---

<section class="hero">
	<div class="hero__container">
		<div class="text__content">
			<h1 class="hero__title color__gradiente">{name}</h1>
			<p class="hero__text">
				{description}
			</p>
			<div class="hero__buttons">
				<Boton href={linkTree} texto="Contact me!" />
				<Boton href={cv} texto="Download my CV" />
			</div>
		</div>

		<img
			class="hero__img"
			src="img/profile.webp"
			alt="Alexjamesmx foto de perfil"
			width="384"
			height="384"
		/>
	</div>
</section>
