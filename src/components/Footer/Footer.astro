---
import Logo from '../Logo.astro';
import SocialIcons from '../SocialIcons.astro';
import './Footer.css';
const { name, email, github } = Astro.props.myData;
---

<footer>
	<div class="footer__container">
		<Logo name={name} />
		<SocialIcons width="23" height="23" />
	</div>

	<aside class="footer__links">
		<ul>
			<li>
				<a class="footer__link" href={`mailto:${email}`}
					><span
						><iconify-icon
							icon="fluent:mail-28-regular"
							width="27"
							height="27"
							style="color: #dcd8fc"
							noobserver></iconify-icon></span
					>
					{email}
				</a>
			</li>
			<li>
				<a
					class="footer__link"
					href={github}
					target="_blank"
					rel="nofollow noreferrer noopener"
					><span
						><iconify-icon
							icon="mdi:github"
							width="27"
							height="27"
							style="color: #dcd8fc"
							noobserver></iconify-icon></span
					>@alexjamesmx</a
				>
			</li>
		</ul>
	</aside>
</footer>
