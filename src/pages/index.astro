---
import About from '../components/About/About.astro';
import Experiences from '../components/Experiences.astro';
import { mainMenu, myData } from '../components/data/menuData';
import Footer from '../components/Footer/Footer.astro';
import Header from '../components/header/Header.astro';
import Hero from '../components/hero/Hero.astro';
import Portfolio from '../components/Portfolio.astro';
import Skills from '../components/skills/Skills.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title=`${myData.name} - ${myData.description}`>
	<Header origin={mainMenu} name={myData.name} showNav={false} />
	<main class="self-center w-full">
		<Hero myData={myData} />
		<About />
		<Portfolio />
		<Skills />
		<Experiences />
	</main>
	<Footer myData={myData} />
</Layout>
